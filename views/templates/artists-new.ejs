<!doctype html>
<html lang="en-US">
  <head >
    <link rel="icon" href="data:;base64,iVBORw0KGgo=">
    <meta charset="utf-8">
    <meta http-equiv="X-US-Compatible" content="IE=edge">
    <title><%= title %> | 'Add New Artist' </title>
        <link rel="stylesheet" href="css/main.css">
    </head>
    <body>
      <h2>Search if Artist is already in Database</h2>
      <!-- <form action="/artists/new" method="POST"> -->
        <div class="form-group">
          <label for="name">Name:</label>
          <input name="name" type="text" placeholder="Name">
          <button type="submit" class="btn btn-info">Search</button>
        </div>

      <h2>Enter New Artist Info</h2>
      <a href="/artists">Cancel</a>
       <form action="/artists/new" method="POST">
        <div class="form-group">
          <label for="name">Name:</label>
          <input name="name" type="text" placeholder="Metallica">
        </div>
        <div class="form-group">
          <label for="genre">Genre:</label>
          <input name="genre" type="text" placeholder="Metal">
        </div>
        <div class="form-group">
          <label for="bio">Bio:</label>
          <textarea name="bio" rows="6"></textarea>
        </div>
        <div class="form-group">
          <label for="album">Album:</label>
          <textarea name="album" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-info">Submit</button>
       </form>

    </body>
</html>
